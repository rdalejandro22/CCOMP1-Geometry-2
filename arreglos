#include <iostream>
using namespace std;
class Punto
{
    int x;
    int y;
public:
    Punto()
    {
        x=0;
        y=0;
    }
    Punto(int a, int b)
    {
        x=a;
        y=b;
    }
    void print()
    {
    cout<< "{" << x << "," << y << "}"<< endl;
    }
};
class PointArray
{
    Punto *points;
    int size;
public:
    PointArray(const Punto p[], const int size)
{
    this->size = size;
    points = new Punto[size];
    int i;
    for(i=0;i<size;i++)
        points[i]= p[i];
    cout<<"se creo el arreglo";

}
    PointArray(PointArray &p)
{
    size = p.size;
    points = new Punto[size];
    int j;
    for(j=0;j<size;j++)
        points[j]= p.points[j];
}
    void print()
    {
        for(int i=0;i<size;i++)
            points[i].print();
    }
};
main()
{
    Punto p1(1,2);
    Punto p2(3,4);
    Punto pa[5];
    PointArray(pa,4);
    pa.print();
}
